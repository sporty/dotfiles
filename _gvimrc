

"---------------------------------------------------------------------------
" ウインドウに関する設定:
"---------------------------------------------------------------------------
" ウインドウの幅
set columns=89
" ウインドウの高さ
set lines=55
" コマンドラインの高さ(GUI使用時)
set cmdheight=2
" 画面をカラースキームを変更する 
colorscheme koehler
set synmaxcol=10000

"数字のハイライト:
let python_highlight_numbers = 1
"組み込み関数のハイライト:
let python_highlight_builtins = 1
"標準例外のハイライト:
let python_highlight_exceptions = 1
"行末の空白と、スペースとタブの混在をハイライト:
let python_highlight_space_errors = 1
"以上全部
"let python_highlight_all = 1




"---------------------------------------------------------------------------
"タブの幅
"---------------------------------------------------------------------------
"タブストップ（タブの文字数）
set ts=4
"シフトワイズ（オートインデントの文字数）
set sw=4
set softtabstop=4 

"--------------------------------------------------------------------------- 
" ビープ音を消す 
set vb t_vb= 

"--------------------------------------------------------------------------- 
" 印刷設定（行番号を表示）
set printoptions=number:y

"--------------------------------------------------------------------------- 
" タグファイル
" 再帰的に上位ディレクトリのtagsを検索
set tags+=tags;

"---------------------------------------------------------------------------
"タブ(GUI)
"---------------------------------------------------------------------------
"常にタブを表示
set showtabline=2




"---------------------------------------------------------------------------
" フォント設定:
"---------------------------------------------------------------------------
if has('win32')
  " Windows用
  set guifont=ＭＳ_ゴシック:h11:cSHIFTJIS
  " 行間隔の設定
  set linespace=1
elseif has('xfontset')
  " UNIX用 (xfontsetを使用)
  set guifontset=a14,r14,k14
elseif has('mac')
  set guifont=Osaka−等幅:h14
endif




"---------------------------------------------------------------------------
"フォールドメソッド
"---------------------------------------------------------------------------
set fdm=marker


"---------------------------------------------------------------------------
" モードライン
"---------------------------------------------------------------------------
set modeline


"---------------------------------------------------------------------------
" タグファイルの自動指定
"---------------------------------------------------------------------------
"ＭａｙａＳＤＫ。インクルードファイルから作成
"autocmd FileType cpp,h :set tags+=~/.vim/tags/maya.tags


"---------------------------------------------------------------------------
" 辞書ファイルの自動指定
"---------------------------------------------------------------------------
"ＰＨＰ
autocmd FileType php :setlocal dictionary=~/.vim/dict/php.dict

"タブをスペースに自動変換
autocmd FileType python :setlocal expandtab
"djangoのtagsを追加
autocmd FileType python :setlocal tags+=C:/Python25/Lib/site-packages/django/tags


"---------------------------------------------------------------------------
" neocomplcache
"---------------------------------------------------------------------------
let g:neocomplcache_enable_at_startup = 1


"---------------------------------------------------------------------------
" EOF
"---------------------------------------------------------------------------
