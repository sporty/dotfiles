snippet     pm__button
    pymel.button(l=u"${1:label}", c=partial(${2:callback}))

snippet     pm__undoable
    import maya.cmds as cmds
    def undoable(func):
        def f(*args, **kwargs):
            cmds.undoInfo(openChunk=True)
            try:
                func(*args, **kwargs)
            except Exception, e:
                traceback.print_exc()
                print("")
                error(e.message)
            finally:
                cmds.undoInfo(closeChunk=True)
        return f

